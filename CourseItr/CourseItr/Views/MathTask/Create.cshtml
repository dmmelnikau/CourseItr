@model CourseItr.Models.MTask

@{
    ViewData["Title"] = "Create";
}
<script src="~/dir/min/dropzone.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link href="~/dir/min/dropzone.min.css" rel="stylesheet" />
<h1>Create</h1>
<h4>MathTask</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("Upload", "MathTask",
                      FormMethod.Post,
                      new
                      {
                          @class = "dropzone",
                          id = "dropzone-form",
                      }))
                {
    <div class="fallback">
        <input name="file" type="file" multiple />
    </div>
                }

</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <textarea asp-for="Condition" class="form-control"></textarea>
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MathTopicId" class="control-label"></label>
                <select asp-for="MathTopicId" class="form-control" asp-items="ViewBag.Topics"></select>
            </div>
            <div class="form-group">
                <label asp-for="Option1" class="control-label"></label>
                <input asp-for="Option1" class="form-control" />
                <span asp-validation-for="Option1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option2" class="control-label"></label>
                <input asp-for="Option2" class="form-control" />
                <span asp-validation-for="Option2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option3" class="control-label"></label>
                <input asp-for="Option3" class="form-control" />
                <span asp-validation-for="Option3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correctians" class="control-label"></label>
                <input asp-for="Correctians" class="form-control" />
                <span asp-validation-for="Correctians" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <a asp-action="ShowAllBlobs">Show</a>
</div>
@section Scripts{
    <script type="text/javascript">
        Dropzone.options.dropzoneForm = {
            paramName: "file",
            maxFilesize: 20,
            maxFiles: 3,
            acceptedFiles: "image/*",
            dictMaxFilesExceeded: "Custom max files msg",
        };
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
